/* pages/auctionItemDetail/auctionItemDetail.wxss */
.container{
  padding-bottom: 150rpx;
}
.swiper{
  width: 100%;
  height: 680rpx;
}

.swiper image {
  width: 100%;
  height: 680rpx;
}

.title-view{
  padding: 20rpx 40rpx;
  border-bottom: 18rpx solid #f5f5f5;
}
.title-view .big-price{
  font-size: 45rpx;
  color: #00c8b6;
  font-weight: 500;
}

.title-view .title{
  padding: 15rpx 0;
  font-weight: 500rpx;
  font-size: 42rpx;
}

.title-view .row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 0;
  color: #8c8c8c;
  font-size: 30rpx;
}

.help-view{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 18rpx solid #f5f5f5;
}
.help-view .help-item{
  font-size: 30rpx;
  color: #8c8c8c;

  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.help-view .help-item image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 22rpx;
}


.bid-view{
  padding:40rpx;

  border-bottom: 18rpx solid #f5f5f5;
}

.detail-view{
  padding:40rpx;

}
.detail-view .introduce{
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.detail-view  .title-zh{
  margin-top: 60rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
  color: #333;
}

.detail-view  .title-en{
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #ccc;
  font-weight: 400;
}

.detail-view .introduce .table{
  width: 100%;
  border: 1px solid #ddd;
  border-bottom: 0;
  margin: 20rpx 0;
}

.detail-view .introduce .table .row{
  
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  color: #333;
  font-weight: 400;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #ddd;
}

.detail-view .introduce .table .key{
  width: 189rpx;
  background-color: #efefef;
  text-align: center;
  border-right: 1rpx solid #ddd;
}
.detail-view .introduce .table .value{
  padding-left: 30rpx;
}


.detail-view .detail{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.detail-view .detail .desc{
  width: 100%;
  margin-top: 20rpx;
}
.detail-view .detail .desc .txt{
  margin:20rpx 0;
  font-size: 30rpx;
}
.detail-view .detail .desc image{
  width: 100%;
}



.browse-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: (100% - 60rpx);
}

.browse-view .num-text {
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 400;
  color: #333;
  text-align: center;
}
.browse-view .avatar-list {
  text-align: center;
  margin-top: 16rpx;
  /* margin-bottom: 86rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.browse-view .avatar-list image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  overflow: hidden;
  margin: 5rpx;
}







.pay-now {
  border-top: 1px solid #ddd;
  position: fixed;
  display: flex;
  bottom: 0;
  height: 110rpx;
  width: 750rpx;
  background-color: #fff;
  justify-content: flex-end;
}

.pay-now .bottom-bg-bid{
  width: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pay-now .pay-btn{
  width: 300rpx;
  height: 110rpx;
  border-radius: 0;
  background-color: #4cc5b6; 
  margin-left: 0;
  margin-right: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 400;
  color: #fff;

}

