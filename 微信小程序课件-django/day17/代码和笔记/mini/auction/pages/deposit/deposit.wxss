/* pages/deposit/deposit.wxss */
.container{
  padding-bottom: 100rpx;
}

.goods{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 18rpx solid #f5f5f5;
}

.goods .img{
  width: 200rpx;  
  overflow: hidden;
}

.goods .detail{
  width: 430rpx;
}

.goods .detail view{
  padding: 10rpx 0; 
  font-size: 28rpx;
}
.goods .detail .title{
  font-size: 45rpx;
  font-weight: 500; 
}
.goods .img image{
  width: 200rpx;
  height: 200rpx;
}


.deposit{
  padding: 40rpx;
  border-bottom: 18rpx solid #f5f5f5;

}
.deposit .row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.deposit view{
  padding: 10rpx 0;
}

.deposit .money{
  font-size: 40rpx;
  color: #D71E61;
}


.way{
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.way .row{
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.way .row .caption{
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.way .row .caption image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.way .row .caption .recommend{
  font-size: 30rpx;
  font-weight: 500;
  color: #D71E61;
}

.way .row .caption .tips{
  font-size: 26rpx;
  color: #C0C0C0;
}

.pay-now {
  border-top: 1px solid #ddd;
  position: fixed;
  display: flex;
  bottom: 0;
  height: 110rpx;
  width: 750rpx;
  background-color: #fff;
  justify-content: flex-end;
}

.pay-now .bottom-bg-money{
  width: 420rpx;
  align-items: center;
  display: flex;
  padding: 30rpx;
  font-size: 46rpx;
  line-height: 46rpx;
  color: #D71E61;
  font-weight: bold;
}

.pay-now .pay-btn{
  width: 300rpx;
  height: 110rpx;
  border-radius: 0;
  background-color: #4cc5b6; 
  margin-left: 0;
  margin-right: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 400;
  color: #fff;

}

.toast-view{
  top: 50%;
  position: fixed;
  width: 230rpx;
  left:calc(50% - 115rpx);
  color: #fff;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 15rpx;
  background: rgba(0, 0, 0, 0.8);  
  height: 84rpx;
}