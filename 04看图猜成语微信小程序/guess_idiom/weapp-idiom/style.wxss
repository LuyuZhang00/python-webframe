view,
text,
button,
checkbox,
form,
input,
label,
radio,
switch,
textarea,
audio,
image,
video,
map {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  outline: none;
}

.text-center {
  text-align: center;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.bg-white {
  background-color: #fff;
}

.bg-gray {
  background-color: #eeeeee;
}

.bold {
  font-weight: bold;
}

.color-default {
  color: #4250b6;
}

.color-white{
  color: #ffffff;
}

.margin-xs{
  margin: 10px 0;
}